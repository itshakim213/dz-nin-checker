{
  "name": "dz-nin-checker",
  "version": "1.0.1",
  "description": "Validateur de Numéro d'Identification National (NIN) algérien avec algorithme Luhn modifié",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "mocha -r ts-node/register src/nin-validator-mocha.test.ts",
    "test:mocha": "mocha -r ts-node/register src/nin-validator-mocha.test.ts",
    "test:jest": "jest",
    "test:watch": "mocha -r ts-node/register --watch src/**/*.test.ts",
    "test:coverage": "nyc mocha -r ts-node/register src/**/*.test.ts",
    "test:interactive": "ts-node src/test-interactive.ts",
    "test:batch": "ts-node src/test-batch.ts",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepare": "node scripts/prepare-release.js",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "nin",
    "algeria",
    "validator",
    "identification",
    "luhn",
    "checksum",
    "algerie",
    "carte-nationale",
    "cnibe",
    "dz"
  ],
  "author": {
    "name": "HxK1m",
    "email": "ikhlefsidali@icloud.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hakim/dz-nin-checker.git"
  },
  "bugs": {
    "url": "https://github.com/hakim/dz-nin-checker/issues"
  },
  "homepage": "https://github.com/hakim/dz-nin-checker#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@jest/globals": "^30.1.2"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "spec": "src/**/*.test.ts",
    "timeout": 5000
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/index.ts"
    ],
    "exclude": [
      "src/**/*.test.ts",
      "src/test-*.ts",
      "dist/**/*"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "no-console": "off"
    }
  }
}
